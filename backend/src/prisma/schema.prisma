generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  nick       String    @unique
  name       String    @default("")
  password   String
  createdAt  DateTime  @default(now())
  events     Event[]
}

model Event {
  id          String  @id @default(uuid())
  nick        String  @unique
  name        String
  description String
  text        String
  createAt    DateTime @default(now())
  authorID    String
  author      User     @relation(fields: [authorID], references: [id]) 
}